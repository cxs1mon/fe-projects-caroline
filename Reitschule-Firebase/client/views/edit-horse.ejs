<!DOCTYPE html>
<html>
  <head>
    <title>Edit Horse</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
    />
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
      defer
    ></script>
    <script src="/js/main-adm.js" defer></script>
  </head>
  <body>
    <!-- TODO: Edit Horse Form -->
    <form id="myEditForm" class="w-75">
      <div class="row">
        <div class="col form-group m-2">
          <input
            id="id"
            class="form-control"
            value="<%= horse.id %>"
            disabled
          />
        </div>
      </div>
      <div class="row">
        <div class="col form-group m-2">
          <input
            id="name"
            type="text"
            class="form-control"
            placeholder="Name"
            value="<%= horse.name %>"
          />
        </div>
        <div class="col form-group m-2">
          <input
            id="birthyear"
            type="number"
            class="form-control"
            placeholder="Birthyear"
            value="<%= horse.birthyear %>"
          />
        </div>
      </div>
      <div class="row">
        <div class="col form-group m-2">
          <input
            id="color"
            type="text"
            class="form-control"
            placeholder="Color"
            value="<%= horse.color %>"
          />
        </div>
        <div class="col form-group m-2">
          <input
            id="breed"
            type="text"
            class="form-control"
            placeholder="Breed"
            value="<%= horse.breed %>"
          />
        </div>
        <div class="col form-group m-2">
          <input
            id="text"
            type="text"
            class="form-control"
            placeholder="Text"
            value="<%= horse.text %>"
          />
        </div>
      </div>
      <button class="btn btn-primary m-2" id="form-edit-submit" type="submit">
        Submit
      </button>
    </form>
  </body>
</html>
