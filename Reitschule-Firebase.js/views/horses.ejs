<!DOCTYPE html>
<html>
  <head>
    <title>Horse Management</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
    />
  </head>
  <body>
    <table class="table w-75">
      <tr>
        <th>Name</th>
        <th>Age</th>
        <th>Color</th>
        <th>Breed</th>
        <th>Edit</th>
        <th>Delete</th>
      </tr>
      <% horses.forEach(horse => { %>
      <tr>
        <td><%= horse.name %></td>
        <td><%= horse.age %></td>
        <td><%= horse.color %></td>
        <td><%= horse.breed %></td>
        <td>
          <form action="/edit/<%= horse.id %>" method="POST">
            <button class="btn btn-sm btn-info edit-btn">Edit</button>
          </form>
        </td>
        <td>
          <form action="/delete/<%= horse.id %>" method="POST">
            <button class="btn btn-sm btn-danger delete-btn">Delete</button>
          </form>
        </td>
      </tr>
      <% }); %>
    </table>

    <form action="/new" method="POST">
      <button class="btn btn-sm btn-success add-new-btn">
        Add new horse
      </button>
    </form>

    <form action="/delete/all" method="POST">
      <button class="btn btn-sm btn-danger delete-all-btn">
        Delete all horses
      </button>
    </form>
    <!-- TODO: Horses List -->
    <!-- TODO: Add Horse Form -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
      src = "../main.js";
    </script>
  </body>
</html>
