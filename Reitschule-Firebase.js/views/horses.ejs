<!DOCTYPE html>
<html>
  <head>
    <title>Horse Management</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
    />
    <script src="/main.js" defer></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
      defer
    ></script>
  </head>
  <body class="container">
    <div class="row justify-content-center">
      <table class="table">
        <tr>
          <th>Name</th>
          <th>Age</th>
          <th>Color</th>
          <th>Breed</th>
          <th>Edit</th>
          <th>Delete</th>
        </tr>
        <% horses.forEach(horse => { %>
        <tr>
          <td><%= horse.name %></td>
          <td><%= horse.age %></td>
          <td><%= horse.color %></td>
          <td><%= horse.breed %></td>
          <td>
            <form action="/edit/<%= horse.id %>" method="POST">
              <button class="btn btn-sm btn-info edit-btn">Edit</button>
            </form>
          </td>
          <td>
            <form action="/delete/<%= horse.id %>" method="POST">
              <button class="btn btn-sm btn-danger delete-btn">Delete</button>
            </form>
          </td>
        </tr>
        <% }); %>
      </table>

      <div class="justify-content-center">
        <form action="/delete/all" method="POST">
          <button class="btn btn-sm btn-danger delete-all-btn">
            Delete all horses
          </button>
        </form>

        <!-- TODO: Horses List -->

        <!-- TODO: Add Horse Form -->
        <details>
          <summary>Add new horse</summary>
          <form id="myForm" class="w-75">
            <div class="row">
              <div class="col form-group m-2">
                <input
                  id="name"
                  type="text"
                  class="form-control"
                  placeholder="Name"
                />
              </div>
              <div class="col form-group m-2">
                <input
                  id="age"
                  type="number"
                  class="form-control"
                  placeholder="Age"
                />
              </div>
            </div>
            <div class="row">
              <div class="col form-group m-2">
                <input
                  id="color"
                  type="text"
                  class="form-control"
                  placeholder="Color"
                />
              </div>
              <div class="col form-group m-2">
                <input
                  id="breed"
                  type="text"
                  class="form-control"
                  placeholder="Breed"
                />
              </div>
            </div>
            <button class="btn btn-primary m-2" type="submit">Submit</button>
          </form>
        </details>
      </div>
    </div>
  </body>
</html>
